<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:padding="12dp"
    android:background="@drawable/background_recycler">

    <TextView
        android:id="@+id/txt_rv_stockin_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/viga"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ItemID" />

    <TextView
        android:id="@+id/txt_rv_stockin_cname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/viga"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_rv_stockin_barcode"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_stockin_barcode"
        tools:text="Company" />

    <TextView
        android:id="@+id/txt_rv_stockin_pname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/viga"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/txt_rv_stockin_cname"
        tools:text="Product Name" />

    <TextView
        android:id="@+id/txt_stockin_rc_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/viga"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_rv_stockin_cname"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_stockin_cname"
        tools:text="Type" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/viga"
        android:text="RM"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/txt_stockin_rc_type"
        app:layout_constraintTop_toTopOf="@+id/txt_stockin_rc_type" />

    <TextView
        android:id="@+id/txt_rv_stockin_pprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/viga"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        tools:text="Price" />

    <TextView
        android:id="@+id/txt_stockin_rc_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/viga"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/txt_rv_stockin_pprice"
        app:layout_constraintTop_toTopOf="@+id/txt_rv_stockin_pprice"
        tools:text="Quantity" />

</androidx.constraintlayout.widget.ConstraintLayout>
