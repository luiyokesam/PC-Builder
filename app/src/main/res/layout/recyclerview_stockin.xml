<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:padding="12dp"
    android:background="@drawable/background_recycler"
    android:id="@+id/stockin_rowlayout">

    <TextView
        android:id="@+id/txt_rv_stockin_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/viga"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ItemID" />

    <TextView
        android:id="@+id/txt_rv_stockin_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/viga"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_rv_stockin_barcode"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_stockin_barcode"
        tools:text="Quantity" />

    <TextView
        android:id="@+id/txt_rv_stockin_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/viga"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_rv_stockin_quantity"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_stockin_quantity"
        tools:text="Date" />

</androidx.constraintlayout.widget.ConstraintLayout>
