<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:padding="12dp"
    android:id="@+id/warehouse_rowlayout"
    android:background="@drawable/background_recycler">

    <TextView
        android:id="@+id/txt_rv_warehouse_rackid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/viga"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="RackID" />

    <TextView
        android:id="@+id/txt_rv_warehouse_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/viga"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txt_rv_warehouse_rackid"
        app:layout_constraintTop_toTopOf="@+id/txt_rv_warehouse_rackid"
        tools:text="Barcode" />

    <TextView
        android:id="@+id/txt_rv_warehouse_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/viga"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_rv_warehouse_rackid"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_warehouse_rackid"
        tools:text="Quantity" />

    <TextView
        android:id="@+id/txt_rv_warehouse_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/viga"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txt_rv_warehouse_barcode"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_warehouse_barcode"
        tools:text="Date" />


</androidx.constraintlayout.widget.ConstraintLayout>